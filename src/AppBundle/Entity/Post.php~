namespace AppBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Class Post.
 *
 * @package Model
 * @author Tomasz Chojna
 *
 * @ORM\Table(name="posts")
 * @ORM\Entity
 */
class Post
{
    /**
     * @ORM\Id
     * @ORM\Column(
     *     type="integer",
     *     nullable=false,
     *     options={
     *         "unsigned" = true
     *     }
     * )
     * @ORM\GeneratedValue(strategy="IDENTITY")
     */
    private $id;

    /**
     * @ORM\Column(
     *     name="topic",
     *     type="string",
     *     length=128,
     *     nullable=false
     * )
     */
    private $topic;

    /**
     * @ORM\Column(
     *     name="content",
     *     type="text",
     *     nullable=false
     * )
     */
    private $content;

    /**
     * @ORM\Column(
     *     name="enabled",
     *     type="boolean",
     *     nullable=false
     * )
     */
    private $enabled;
}